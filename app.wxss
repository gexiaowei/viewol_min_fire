/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.bold {
  font-weight: bold;
}

.w-100 {
  width: 100%;
}

.text-center {
  text-align: center;
}

.section-content {
  margin-top: -10rpx;
  border: 2rpx solid #ffffff;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
}

.section-title {
  font-size: 56rpx;
  text-align: center;
  color: #2661a7;
  align-items: flex-end;
  z-index: 100;
  position: relative;
}

.section-title .name {
  display: inline-block;
  color: #ffffff;
  padding: 0 20rpx 0 40rpx;
  margin-bottom: -8rpx;
}

.section-title .sub-title {
  font-size: 24rpx;
  text-align: center;
  color: #ffe200;
  letter-spacing: 3rpx;
}

.section-title .background-image {
  position: absolute;
  z-index: -1;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 30%);
}

.icon-detail {
  margin-left: 20rpx;
  width: 24rpx;
  height: 24rpx;
}
