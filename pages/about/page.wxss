@import '/weui.wxss';
.page {
  background: #a0c9fd;
}

.page_bd {
  padding: 32rpx;
  font-size: 36rpx;
}

.title {
  font-size: 56rpx;
  text-align: center;
  color: #2661a7;
  align-items: flex-end;
  z-index: 100;
  position: relative;
}

.title:not(:first-child) {
  margin-top: 80rpx;
}

.title .name {
  display: inline-block;
  color: #ffffff;
  padding: 0 20rpx 0 40rpx;
  margin-bottom: -8rpx;
}

.title .sub-title {
  font-size: 24rpx;
  text-align: center;
  color: #ffe200;
  letter-spacing: 3rpx;
}

.background-image {
  position: absolute;
  z-index: -1;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 30%);
}

.arrangement-name {
  margin: 40rpx 0 30rpx;
  color: #094a8a;
  font-weight: bold;
}

.article-container {
  margin-top: -10rpx;
  border: 2rpx solid #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
}

.article {
  text-indent: 72rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #192d45;
  word-break: break-all;
  text-align: justify;
}

.article:first-child {
  margin-top: 0rpx;
}

.list-container {
  border: 2rpx solid #ffffff;
  border-radius: 20rpx;
  padding: 10rpx 20rpx 40rpx;
}

.time-container {
  margin-top: 6rpx;
}

.left {
  width: 49rpx;
}

.left image {
  width: 50rpx;
  height: 50rpx;
}

.right {
  margin-left: 24rpx;
}

.right .time {
  color: #094a8a;
  font-size: 32rpx;
  font-weight: 500;
}

.activity .left {
  position: relative;
  justify-content: center;
  align-items: center;
}

.activity .left::before {
  content: '';
  position: absolute;
  width: 3rpx;
  left: calc(50% - 1rpx);
  top: -16rpx;
  height: 100%;
  background: #0251b6;
}

.activity .left .point image {
  width: 30rpx;
  transform: translateX(80%);
  margin: 0 20rpx;
}

.activity .right {
  position: relative;
  color: #2b3c4c;
  font-size: 30rpx;
  background: #cee3fd;
  padding: 32rpx 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  color: #0251b6;
}

.activity .right .desc {
  margin-left: 20rpx;
}

.page_fd {
  background: #eaf1f9;
  padding: 40rpx;
}

.tip {
  font-size: 36rpx;
  color: #144b83;
}

.content {
  font-size: 32rpx;
  color: #2b3c4c;
}
