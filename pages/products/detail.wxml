  <view class="page__hd">
    <view>
      <image
        class="logo"
        src="{{company.logoView}}"
        mode="widthFix"
        lazy-load="{{true}}"
      />
    </view>
    <view>
      <view class="name">{{company.name}}</view>
    </view>
  </view>

  <view class="place-container">
    <view>
      <image
        class=""
        src="../../images/welcome.png"
        mode="widthFix"
      />

    </view>
    <view class="place">
      {{company.place}}
    </view>
    <view class="mark">
      我司展位号
    </view>

  </view>

  <view class="page__bd">
    <view class="information">
      <view class="topic">
        <view class="main">展品详情</view>
      </view>
      <view class="cover">
        <image
          src="{{product.imageView}}"
          mode="widthFix"
          lazy-load="true"
        />
      </view>
      <view class='desc'>
        <template is="wxParse" data="{{wxParseData:article.nodes}}" />
      </view>
    </view>
    <view class="relative">
      <view class="topic">
        <view class="main">其他展品</view>
      </view>
      <view class="weui-flex product">
        <navigator
          url="./detail?id={{item.id}}"
          open-type="redirect"
          class="weui-flex__item item"
          wx:for="{{relative_products}}"
          wx:key="id"
        >
          <view class="weui-flex cover">
            <image
              class=""
              src="{{item.imageView}}"
              mode="aspectFill"
              lazy-load="{{true}}"
            ></image>
          </view>
          <view class="name">{{item.name}}</view>
        </navigator>
      </view>
    </view>
    <view wx:if="{{see.length > 0}}">
      <view class="topic">
        <view class="main">围观</view>
      </view>
      <view class="watch">
        <view class="avatar-list">
          <image
            wx:for="{{see}}"
            wx:key="key"
            class="avatar"
            src="{{item.headImgUrl}}"
            mode="widthFix"
          />

        </view>
      </view>
    </view>
    <view>
      <view class="topic">
        <view class="main">点赞</view>
      </view>
      <view class="praise">
        <view class="icon-container" bindtap="praiseProduct">
          <image
            class="icon"
            src="../../images/common/icon_praise.png"
            mode="widthFix"
          />
        </view>
        <view class="desc">喜欢就点个赞吧</view>
        <view class="count">({{praise.length}}赞)</view>
        <view class="name">
          <text wx:for="{{praise}}" wx:key="id" wx:if="{{item.userName}}"  decode="{{true}}">
                    {{item.userName}}&emsp;
                </text>
        </view>
      </view>
    </view>

    <view class="">
      <view class="topic">
        <view class="main">评论</view>
      </view>
      <view class="comment">
        <view
          class="item weui-flex {{item.reply?'reply':''}}"
          wx:for="{{comment}}"
          wx:key="id"
        >
          <view class="avatar-container">
            <image
              class="avatar"
              src="{{item.headImgUrl}}"
              mode="widthFix"
            />
          </view>
          <view class="weui-flex__item info">
            <!-- <view class="name">{{item.userName}}</view>
            <view class="time">{{format.date(item.cTime)}}</view> -->
            <view class="content">{{item.comment}}</view>
          </view>
          <view class="avatar-container">
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="page_fd">
    <input
      type="text"
      value="{{message}}"
      placeholder="我也要评论..."
      placeholder-style="color:#024397;"
      bindconfirm="commitComment"
      confirm-type="send"
    />
  </view>
</view>

